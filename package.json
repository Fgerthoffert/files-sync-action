{
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wadackel/files-sync-action.git"
  },
  "type": "module",
  "scripts": {
    "build": "ncc build src/main.ts --source-map --license licenses.txt",
    "typecheck//": "See https://github.com/vitejs/vite/issues/11552",
    "typecheck": "tsc --skipLibCheck",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest",
    "test:watch": "pnpm run test --watch",
    "format": "run-s format:*",
    "format:prettier": "prettier --write .",
    "format:eslint": "pnpm lint --fix",
    "generate": "run-s generate:* format",
    "generate:inputs": "tsx ./scripts/generate-inputs.ts",
    "generate:docs": "tsx ./scripts/generate-docs.ts",
    "release": "semantic-release",
    "prepare": "husky install"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,yml,json}": "prettier --write"
  },
  "prettier": {
    "arrowParens": "always",
    "plugins": [
      "prettier-plugin-packagejson"
    ],
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/consistent-type-imports": "error",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "import/no-unresolved": "off",
      "import/order": [
        "error",
        {
          "newlines-between": "never"
        }
      ]
    },
    "root": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ],
    "preset": "angular"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@octokit/auth-app": "^4.0.9",
    "deepmerge-ts": "^5.1.0",
    "ejs": "^3.1.9",
    "fast-glob": "^3.2.12",
    "fp-ts": "^2.13.1",
    "is-base64": "^1.1.0",
    "micromatch": "^4.0.5",
    "octokit": "^2.0.14",
    "yaml": "^2.2.1",
    "zod": "^3.21.4",
    "zod-error": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-angular": "^17.6.1",
    "@types/ejs": "^3.1.2",
    "@types/is-base64": "^1.1.1",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.0",
    "lint-staged": "13.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-packagejson": "^2.4.3",
    "semantic-release": "^21.0.1",
    "ts-dedent": "^2.2.0",
    "ts-morph": "^18.0.0",
    "tsx": "^3.12.6",
    "type-fest": "^3.8.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "packageManager": "pnpm@8.3.0"
}
